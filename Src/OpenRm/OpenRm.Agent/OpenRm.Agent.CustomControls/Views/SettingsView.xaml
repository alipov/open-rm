<Window x:Class="OpenRm.Agent.CustomControls.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SettingsView" Height="300" Width="300">
    <Grid>
        <Button Content="Apply" Height="23" HorizontalAlignment="Left" Margin="173,196,0,0" Name="ApplyButton" VerticalAlignment="Top" Width="75" Click="Apply_Click" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="100,98,0,0" Name="ServerText" VerticalAlignment="Top" Width="148" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="100,144,0,0" Name="PortText" VerticalAlignment="Top" Width="148" />
        <TextBlock Height="55" HorizontalAlignment="Left" Margin="22,24,0,0" Name="textBlock1" Text="After you change the settings, press Apply and the client will be reconnected.             To cancel - simply close this window." VerticalAlignment="Top" Width="235" TextWrapping="Wrap" />
        <Label Content="Server:" Height="26" HorizontalAlignment="Left" Margin="22,95,0,0" Name="label1" VerticalAlignment="Top" Width="61" />
        <Label Content="Port:" Height="26" HorizontalAlignment="Left" Margin="22,141,0,0" Name="label2" VerticalAlignment="Top" Width="61" />
    </Grid>
</Window>
